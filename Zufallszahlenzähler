import random

def ziehung():
    zahlenliste = list(range(1, 46))  # Liste der Zahlen von 1 bis 46-1
    gezogene_zahlen = [] # Liste für gezogene Zahlen

    for i in range(5):
        letzte_stelle = 44 - i
        zufallszahl = random.randint(0, letzte_stelle)  # Zufälliger Integer zwische 0. und letzter Stelle --> random.getrand() nicht gefunden
        gezogene_zahlen.append(zahlenliste[zufallszahl])  # Füge die gezogene Zahl zur Ergebnisliste hinzu

        # Werte an den Stellen tauschen
        a = zahlenliste[zufallszahl]
        zahlenliste[zufallszahl] = zahlenliste[letzte_stelle]
        zahlenliste[letzte_stelle] = a

    return gezogene_zahlen

def statistik_aktualisieren(statistik, gezogene_zahlen):
    for zahl in gezogene_zahlen:
        statistik[zahl] += 1  #für jede gezogene Zahl "Counter plus 1"

def main():
    statistik = {i: 0 for i in range(1, 46)}  #Dictionary für die Statistik

    # 1000 Ziehungen
    for i in range(100000):
        gezogene_zahlen = ziehung()  # Führe eine Ziehung durch
        statistik_aktualisieren(statistik, gezogene_zahlen)  # Aktualisiere die Statistik

    # Ausgabe der Statistik (Häufigkeit pro Zahl ausgeben)
    print("Statistik:")
    for zahl, haeufigkeit in statistik.items():
        print("Zahl " + str(zahl) + ": " + str(haeufigkeit) + " mal gezogen")

if __name__ == "__main__":
    main()
